<% layout("/layouts/boilerPlate") %>

  <body>
    <div class="row">
      <div class="col-8 offset-2">
        <h3>
          listings details
      </div>
      <div class="card col-6 offset-2">
        <img src="<%= idlisting.image %>" class="card-img-top show-img" alt="Listing_images">
        <div class="card-body">
          <p class="card-text">
           <b> <%= idlisting.title %> </b> <br>
           <%= idlisting.description %> <br>
           &#8377; <%= idlisting.price.toLocaleString("en-IN") %> <br>
           <%= idlisting.location %> <br>
           <%= idlisting.country %>
          </p>
        </div>

      </div>
      <h4>
        
        <br>
        <a href="/listings/<%= idlisting._id %>/edit" class="btn btn-dark">Edit /a>
        <br><br>
        <form method="post" action="/listings/<%= idlisting._id %>?_method=delete">
          <button class="btn btn-dark">Delete </button>
        </form>
      </h4>
      

      </h3>

    </div>

  </body>