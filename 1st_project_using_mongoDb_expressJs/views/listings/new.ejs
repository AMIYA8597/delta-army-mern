<% layout("/layouts/boilerPlate") %>
<body>
    <h3>Create a New Listing</h3>

    <form method="post" action="/listings">
        <input name="listing[title]" placeholder="enter Title" type="text">
        <br>
        <br>
        <textarea name="listing[description]" placeholder="enter description" cols="20" rows="5"></textarea>
        <!-- <input name="description" placeholder="enter description" type="text"> -->
        <br>
        <br>
        <input name="listing[image]" placeholder="enter image URL/link" type="text">
        <br>
        <br>
        <input name="listing[price]" placeholder="enter price" type="text">
        <br>
        <br>
        <input name="listing[country]" placeholder="enter country" type="text">
        <br>
        <br>
        <input name="listing[location]" placeholder="enter location" type="text">
        <br>
        <br>
        
        <button>Add</button>
    </form>
</body>

